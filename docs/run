#!/bin/bash

set -eu
set -o pipefail

set +eu
ROOT=$(dirname "${BASH_SOURCE[0]}")
set -eu

ROOT=$(readlink -f "${ROOT}")
echo "Building from $ROOT"

SOURCEDIR="$ROOT/source"
echo "Using source from $SOURCEDIR"

publish () {

    BUILDDIR="/tmp/swap-pages-$$"
    echo "Building to $BUILDDIR"

    GIT=$(git remote -v | grep push | grep origin | awk '{print $2}')
    echo "Using git origin address $GIT"

    mkdir $BUILDDIR
    cd $BUILDDIR
    git init .
    git remote add -t gh-pages origin $GIT
    git pull

    ln -s . html
    touch .nojekyll

    cd $ROOT
    sphinx-build -a -E -b html $SOURCEDIR $BUILDDIR

    cd $BUILDDIR
    rm html
    git add -A
    git commit -m "Auto publish updated docs...."

    read -p "Build finished, should push?" -n 1 -r
    git push origin master:gh-pages
}

setup_gh_pages () {

    BUILDDIR="/tmp/swap-pages-$$"
    echo "Building to $BUILDDIR"

    GIT=$(git remote -v | grep push | grep origin | awk '{print $2}')
    echo "Using git origin address $GIT"

    mkdir $BUILDDIR
    cd $BUILDDIR
    git init .
    git remote add origin $GIT
    git fetch
    git checkout --orphan gh-pages

    touch .nojekyll
    git add .nojekyll
    git commit -m "Initial commit"

    read -p "Push empty gh-pages branch to origin?" -n 1 -r
    git push origin gh-pages:gh-pages

}

build () {
    BUILDDIR="$ROOT/build"
    sphinx-build -b html $SOURCEDIR $BUILDDIR
}

run_command=$1
shift

case $run_command in
    "publish")
        publish
        ;;
    "init")
        setup_gh_pages
        ;;
    "build")
        build
        ;;
esac
